<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scan.result.ResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/back_button_white" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Result"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cardview_result"
            android:layout_width="310dp"
            android:layout_height="128dp"
            android:layout_marginTop="40dp"
            android:elevation="3dp"
            android:src="@drawable/cardview_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <ImageView
            android:id="@+id/ic_activity"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginStart="31dp"
            android:elevation="3dp"
            android:src="@drawable/ic_result_activity"
            app:layout_constraintBottom_toBottomOf="@id/cardview_result"
            app:layout_constraintStart_toStartOf="@id/cardview_result"
            app:layout_constraintTop_toTopOf="@id/cardview_result" />

        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_marginTop="15dp"
            android:elevation="3dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="75 %"
            android:textColor="@color/primaryColor"
            android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@id/ic_activity"
            app:layout_constraintTop_toTopOf="@id/cardview_result" />

        <TextView
            android:id="@+id/tv_label_disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:fontFamily="@font/poppins_reguler"
            android:text="indicated"
            android:textColor="@color/greyColor"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@id/tv_percentage"
            app:layout_constraintTop_toBottomOf="@id/tv_percentage" />

        <TextView
            android:id="@+id/tv_name_disease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Bacterial Leaf Blight"
            android:textColor="@color/primaryColor"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tv_label_disease"
            app:layout_constraintTop_toBottomOf="@id/tv_label_disease" />

        <TextView
            android:id="@+id/tv_label_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="About The Disease"
            android:textColor="@color/primaryColor"
            app:layout_constraintStart_toStartOf="@id/cardview_result"
            app:layout_constraintTop_toBottomOf="@id/cardview_result" />

        <TextView
            android:id="@+id/tv_about_disease"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/poppins_reguler"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip. "
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tv_label_about"
            app:layout_constraintTop_toBottomOf="@id/tv_label_about" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>